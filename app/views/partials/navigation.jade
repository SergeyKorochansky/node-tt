.navbar.navbar-default.navbar-fixed-top(role='navigation')
  .container
    .navbar-header
      button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
        span.sr-only Toggle navigation
        span.icon-bar
        span.icon-bar
        span.icon-bar
      a.navbar-brand(href='/') Node.js test task
    .navbar-collapse.collapse
      ul.nav.navbar-nav
        - var menu = { 'Home': '/', 'Cities': '/cities', 'Users': '/users', 'Projects': '/projects'}
        block link
          - var selected = 'Home';
        for val, key in menu
          - var itemClass = (selected === key ? 'active' : '');
            li(class=itemClass)
              a(href=val)= key

      ul.nav.navbar-nav.navbar-right
        li
          a(href='/profile')= user.fullName()
        li
          p.navbar-btn
            form(role='form' method='post' action='/logout')
              button.btn.btn-info(type='submit') Log out